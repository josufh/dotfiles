general {
        colors = true
        interval = 5
}

order += "wireless _first_"
order += "battery all"
order += "disk /"
order += "tztime tokyo"

wireless _first_ {
        format_up = "Dox %ip"
        format_down = "No wifi?"
}

battery all {
        format = "%percentage"
}

disk "/" {
        format = "Porn folder: %avail"
}

tztime tokyo {
        format = "%Y-%m-%d %H:%M:%S"
	timezone = "Asia/Tokyo"
}
